// fyodorio's custom Zed settings
{
  "features": {
    "inline_completion_provider": "none" // no openai please
  },
  "autosave": { "after_delay": { "milliseconds": 1000 } }, // always
  "theme": "macOS Classic Light", // requires extension — clean and less intrusive
  "ui_font_size": 17,
  "buffer_font_size": 15,
  "base_keymap": "VSCode", // lesser evil
  "preview_tabs": {
    "enabled": false
  },
  "tabs": {
    "git_status": true
  },
  "soft_wrap": "editor_width",
  "preferred_line_length": 120,
  "telemetry": {
    // no way
    "diagnostics": false,
    "metrics": false
  },
  "diagnostics": {
    "include_warnings": false
  },
  "auto_update": false, // because why the hell
  "git": {
    "inline_blame": {
      "enabled": false // too annoying
    }
  },
  "ensure_final_newline_on_save": false,
  "when_closing_with_no_tabs": "keep_window_open",
  "toolbar": {
    "breadcrumbs": true, // I only need to know where am I, that's it
    "quick_actions": false,
    "selections_menu": false
  },
  "tab_bar": {
    "show": false // there can be only one
  },
  "assistant": {
    "version": "1",
    "enabled": false, // rage against the machine
    "button": true
  },
  "chat_panel": {
    "button": false // forever alone...
  },
  "collaboration_panel": {
    "button": false // hate everyone
  },
  "task": {
    "show_status_indicator": false // dunno wtf is that
  },
  "notification_panel": {
    "button": false // requires signin — we don't use that here
  },
  "terminal": {
    "button": false // who uses anything but warp these days...
  },
  "outline_panel": {
    "button": false // rather annoying
  }
}
